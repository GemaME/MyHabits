            android:layout_height="wrap_content"
            android:layout_below="@+id/check_parking_places"
            android:layout_toRightOf="@+id/check_super_places"/>



        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/check_cafebar_places"
